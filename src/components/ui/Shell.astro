---
interface Props {
  as: string;
  class: string;
  id: string;
}
const { as: Comp = "section", class: className, id } = Astro.props;
---

<Comp
  id={id}
  data-section={id}
  class:list={[
    "scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl",
    className,
  ]}
>
  <slot />
</Comp>
